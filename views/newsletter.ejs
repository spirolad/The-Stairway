<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
  <%- include("./partials/nav.ejs") %>

  <div style="margin-top: 8em;"></div>

  <div style="display: flex; flex-wrap: wrap; justify-content: center; margin: 0 10px;">
    <% if(articles.length > 0) { %>
        <% articles.forEach(article => { %>
          <div style="width: 300px; margin: 20px;">
            <div style="border: 1px white solid; padding: 20px; border-radius: 5%;">
              <img src="/images/articles/<%= article.image %>" alt="image article" style="width: 100%;">
              <h2><%= article.title %></h2>
              <p><%= article.description %></p>
              <a href="/article/<%= article.name %>">Lire la suite</a>
            </div>
          </div>
        <%}); %>
    <% } else {%>
      <p>No article to display</p>
    <% }%>
  </div>
  
  </body>
  <footer>
    <%- include("./partials/footer.ejs") %>
  </footer>
</html>